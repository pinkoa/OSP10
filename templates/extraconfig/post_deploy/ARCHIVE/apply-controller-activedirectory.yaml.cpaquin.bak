heat_template_version: 2014-10-16

description: >
  Apply configuration required for Active Directory integration to Controller Nodes

parameters:
  servers:
    type: json
  input_values:
    type: json

resources:
  ADControllerConfig:
    type: OS::Heat::SoftwareConfig
    properties:
      group: script
      config: {get_file: /home/stack/templates/extraconfig/post_deploy/post_deploy_controller-activedirectory.sh}

  ADControllerDeployment:
    type: OS::Heat::SoftwareDeployments
    properties:
      name: ADControllerDeployment
      servers: {get_param: [servers]}
      config:  {get_resource: ADControllerConfig}
      actions: ['CREATE','UPDATE'] # do this on CREATE and UPDATE
      input_values: {get_param: input_values}
